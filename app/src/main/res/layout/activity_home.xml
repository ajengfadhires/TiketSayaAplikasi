<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPrimary"
    tools:context=".HomeAct"
    >


   <ScrollView
       android:scrollbars="none"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <View
               android:id="@+id/view2"
               android:layout_width="match_parent"
               android:layout_height="310dp"
               android:background="@drawable/bg_gradient_primary_blue"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />


           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="8dp"
               android:layout_marginTop="32dp"
               android:layout_marginEnd="8dp"
               android:fontFamily="@font/mlight"
               android:text="My Dashboard"
               android:textAlignment="center"
               android:textColor="#FFF"
               android:textSize="24sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.496"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@+id/view2" />

           <View
               android:id="@+id/circle_profile"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_marginStart="24dp"
               android:layout_marginTop="24dp"
               android:background="@drawable/bg_view_circle_picture"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView2" />

           <com.github.florent37.shapeofview.shapes.CircleView
               android:layout_width="51dp"
               android:layout_height="52dp"
               app:layout_constraintBottom_toBottomOf="@+id/circle_profile"
               app:layout_constraintEnd_toEndOf="@+id/circle_profile"
               app:layout_constraintStart_toStartOf="@+id/circle_profile"
               app:layout_constraintTop_toTopOf="@+id/circle_profile">


               <ImageView
                   android:id="@+id/photo_home_user"
                   android:layout_width="match_parent"
                   android:layout_height="55dp"
                   android:src="@drawable/dp_pic_ajeng_ori" />

           </com.github.florent37.shapeofview.shapes.CircleView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="96dp"
               android:layout_marginTop="24dp"
               android:fontFamily="@font/mmedium"
               android:text="Ajeng Adhisresti"
               android:textColor="#FFF"
               android:textSize="19sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView2" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="96dp"
               android:layout_marginTop="50dp"
               android:fontFamily="@font/mlight"
               android:text="Traveller"
               android:textColor="#FFF"
               android:textSize="18sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView2" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="220dp"
               android:layout_marginTop="36dp"
               android:layout_marginEnd="24dp"
               android:fontFamily="@font/mregular"
               android:text="USD 329"
               android:textColor="#3AC2A9"
               android:textSize="19sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView2" />

           <LinearLayout
               android:id="@+id/linearLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="24dp"
               android:paddingRight="24dp"
               android:layout_marginStart="24dp"
               android:layout_marginTop="112dp"
               android:layout_marginEnd="24dp"
               android:background="@drawable/bg_layout_white"
               android:orientation="vertical"
               android:paddingTop="30dp"
               android:paddingBottom="30dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintTop_toBottomOf="@+id/textView2">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/mregular"
                   android:text="Main Menus"
                   android:textColor="@color/blackPrimaryy"
                   android:textSize="19sp" />

               <TextView
                   android:layout_marginTop="4dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/mlight"
                   android:text="Explore the beauty of the world"
                   android:textColor="@color/greyPrimary"
                   android:textSize="16sp" />

               <View
                   android:background="#EDEDED"
                   android:layout_marginTop="16dp"
                   android:layout_marginBottom="16dp"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   />

               <LinearLayout
                   android:layout_marginBottom="24dp"
                   android:orientation="horizontal"
                   android:weightSum="3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:id="@+id/btn_ticket_pisa"
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/icon_pisa"/>

                       <TextView
                           android:layout_marginTop="4dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/mregular"
                           android:text="Pisa"
                           android:textColor="@color/greyPrimary"
                           android:textSize="12sp" />


                   </LinearLayout>

                   <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/icon_torri"/>

                       <TextView
                           android:layout_marginTop="4dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/mregular"
                           android:text="Torri"
                           android:textColor="@color/greyPrimary"
                           android:textSize="12sp" />




                   </LinearLayout>

                   <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/icon_pagoda"/>

                       <TextView
                           android:layout_marginTop="4dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/mregular"
                           android:text="Pagoda"
                           android:textColor="@color/greyPrimary"
                           android:textSize="12sp" />




                   </LinearLayout>


               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:weightSum="3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/icon_borobudur"/>

                       <TextView
                           android:layout_marginTop="4dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/mregular"
                           android:text="Candi"
                           android:textColor="@color/greyPrimary"
                           android:textSize="12sp" />




                   </LinearLayout>

                   <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/icon_sphinx"/>

                       <TextView
                           android:layout_marginTop="4dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/mregular"
                           android:text="Sphinx"
                           android:textColor="@color/greyPrimary"
                           android:textSize="12sp" />

                   </LinearLayout>

                   <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/icon_monas"/>

                       <TextView
                           android:layout_marginTop="4dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/mregular"
                           android:text="Monas"
                           android:textColor="@color/greyPrimary"
                           android:textSize="12sp" />

                   </LinearLayout>


               </LinearLayout>


           </LinearLayout>

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="32dp"
               android:fontFamily="@font/mmedium"
               android:text="TicketTips"
               android:textColor="@color/blackPrimaryy"
               android:textSize="19sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

           <TextView
               android:id="@+id/textView6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="4dp"
               android:fontFamily="@font/mlight"
               android:text="Learn further for many benefits"
               android:textColor="@color/blackPrimaryy"
               android:textSize="18sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView5" />

           <HorizontalScrollView
               android:scrollbars="none"
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:layout_marginStart="24dp"
               android:layout_marginTop="28dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView6">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                  <ImageView
                      android:layout_marginRight="24dp"
                      android:src="@drawable/item_one"
                      android:layout_width="227dp"
                      android:layout_height="98dp"
                      />

                   <ImageView
                       android:layout_marginRight="24dp"
                       android:src="@drawable/item_two"
                       android:layout_width="227dp"
                       android:layout_height="98dp"
                       />


               </LinearLayout>


           </HorizontalScrollView>

       </androidx.constraintlayout.widget.ConstraintLayout>


   </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>